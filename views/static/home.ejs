



    <div class="container my-4">
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <% for (const { _id, title, content, createdAt } of article) { %>
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%=title %></h5>
                        <p class="card-text"><%=content.substring(0, 400) %> ...</p>
                    </div>
                    <div class="card-footer text-muted">
                    <%=createdAt %>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>


